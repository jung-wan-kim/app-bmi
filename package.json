{
  "name": "app-forge",
  "version": "1.0.0",
  "description": "MCP 기반 모바일 앱 개발 자동화 시스템",
  "main": "index.js",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "start:taskmanager": "node automation/taskmanager.js",
    "dev:ios": "npm run sync:figma && cd ios && xcodebuild -workspace AppForge.xcworkspace -scheme AppForge -destination 'platform=iOS Simulator,name=iPhone 15' build",
    "dev:android": "npm run sync:figma && cd android && ./gradlew assembleDebug",
    "dev:both": "concurrently \"npm run dev:ios\" \"npm run dev:android\"",
    "sync:figma": "node scripts/figma-sync.js",
    "pipeline:full": "node automation/workflows/full-pipeline.js",
    "test:ios": "cd ios && xcodebuild test -workspace AppForge.xcworkspace -scheme AppForgeTests -destination 'platform=iOS Simulator,name=iPhone 15'",
    "test:android": "cd android && ./gradlew test",
    "test:e2e": "node automation/workflows/e2e-tests.js",
    "test:all": "concurrently \"npm run test:ios\" \"npm run test:android\" \"npm run test:e2e\"",
    "build:ios": "./scripts/build-ios.sh",
    "build:android": "./scripts/build-android.sh",
    "build:both": "concurrently \"npm run build:ios\" \"npm run build:android\"",
    "deploy:ios": "cd ios && fastlane release",
    "deploy:android": "cd android && fastlane release",
    "deploy:both": "concurrently \"npm run deploy:ios\" \"npm run deploy:android\"",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:deploy": "supabase db push"
  },
  "keywords": [
    "mobile",
    "ios",
    "android",
    "automation",
    "mcp",
    "figma",
    "supabase"
  ],
  "author": "Jung-wan Kim",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "chokidar": "^3.5.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "puppeteer": "^21.5.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}